<Window x:Class="MovieDatabaseApp.MovieDatabaseHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieDatabaseApp"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="Movie Database - Home">

    <Grid Background="White">
        <Label Content="The Movie Database" FontSize="18" HorizontalAlignment="Center"/>
        <Separator Background="Blue" VerticalAlignment="Top" Margin="0 30 0 0"/>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="Enter Movie Name" FontSize="14"/>
            <TextBox Grid.Row="1" Grid.Column="0" x:Name="txtMovieName" FontSize="14" Background="DimGray"/>
            <Button Grid.Row="2" Grid.Column="0" Name="btnSearch" Click="btnSearch_Click" Content="Search" Background="Blue" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
